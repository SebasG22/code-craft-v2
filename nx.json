{
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "build.client",
          "build.ssr",
          "lint",
          "test",
          "e2e"
        ],
        "accessToken": "MDgzNWFlNDMtOWIzMi00NmUxLWIzMmQtN2QwZWIyMGIyYzMwfHJlYWQtd3JpdGU="
      }
    }
  },
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
